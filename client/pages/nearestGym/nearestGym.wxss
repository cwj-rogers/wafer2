page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
/* 排序条件样式  */
.sort-condition{
  display: flex;
  flex-direction: row;
  position: fixed;
  z-index: 999;
  /* padding: 10rpx; */
  
}
.sort-condition view{
  width: 375rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 5rpx solid rgba(255, 230, 0, 1);
  border-bottom: 0rpx;
}
.sort-condition .smart{
  border-right: 1rpx solid rgba(255, 230, 0, 1);
}  

/* 列表样式  */
.page-body{
  padding-top: 90rpx;
}
.list-item{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items:flex-start;
  height: 200rpx;
  width: 710rpx;
  padding: 40rpx 20rpx;
  margin-top: 20rpx;
  background: #FFF;
  border-top: 5px solid rgba(255, 245, 0, 1);
  transition: all 300ms ease;
  font-size: 32rpx;
}
.list-item-item{
  height: 200rpx;
}
/* 内容介绍  */
.list-item-content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10rpx; 
  width: 375rpx;
  overflow: hidden;
}
.list-item-content text{
  white-space:nowrap;
}
.list-item-content .tag-container{
  display: flex;
  justify-content: space-around;
  align-content:space-around;
  flex-wrap: wrap;
  overflow: hidden;
  min-height: 106rpx;
  padding: 0rpx 25rpx 0rpx 0;
}
.list-item-content .item-tag{
  padding: 6rpx 16rpx;
  background-color: gray;
  margin-right: 8rpx;
  border-radius: 15rpx;
  color: white;
  font-size: 20rpx;
}
/* 订阅小按钮相关  */
.list-item-sub{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10rpx;
}
.list-item-sub view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}
 .list-item-sub view text{
  display: flex;
  justify-content: center;
  align-items: center;
} 
.list-item-sub view .sub-explain{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
  margin-bottom: 10rpx;
  padding: 0 20rpx 0 5rpx;
}