<!--index.wxml-->
<view class="container">
  <view class="page-body">

    <!-- 健身房详情 -->
    <view class='flex-wrp' style='flex-direction:column;align-items:center;'>
      <view class="list-item list-item-first bg-yellow">
        <text class='fitness-room'>天河贝曼咖啡店</text>
      </view>

      <!-- 轮播图  -->
      <view class="list-item list-item-map">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
          <block wx:for="{{imgUrls}}">
            <swiper-item>
              <image src="{{item}}" class="slide-image"/>
            </swiper-item>
          </block>
        </swiper>
      </view>

      <!-- 场地介绍  -->
      <view class="list-item">
        <view class='list-item-adress'>
          <button type="primary" bindtap=""> 点击打开地图 </button>
        </view>
        <view class='list-item-item'>
          <image style="width: 110rpx; height: 110rpx; background-color: #eeeeee;border-radius:50%;" src="../index/user-unlogin.png"></image>
        </view>
        <view class='list-item-item'>
          <text class='cname'>Yoga空中瑜伽Yoga空中瑜伽</text>
          <text class='cname-time-site'>下午 14:00-15:00\n瑜伽大教室</text>
        </view>
        <view class='list-item-item list-item-button'>
          <button class='cname-button' size="mini" loading="{{false}}" hover-class="cname-button-hover">参加</button>
          <text>人数: 11人</text>
        </view>
      </view>
      <view class="list-item list-item-last bg-yellow">
        <text class='see-more'>查看更多</text>
      </view>

    </view>
  </view>
</view>
