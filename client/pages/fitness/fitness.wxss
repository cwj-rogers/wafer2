/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.flex-wrp{
  width: 750rpx;
  display:flex;
}

/* 列表样式  */
.list-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx 0rpx;
  width: 750rpx;
  background: #FFF;
  border-top: none;
  transition: all 300ms ease;
  font-size: 32rpx;
}
.list-item-first{
  align-items: center; 
  height: 80rpx;
  width: 750rpx;
  /* margin-top: 30rpx; */
  border: 0rpx solid darkgray;
  background: #fff500;
  padding: 0rpx 0rpx;
}

  /* 轮播图  */
.list-item-map{
  height: 350rpx;
  padding: 0rpx 0rpx;
}
.list-item-map swiper{
  width: 100%;
  height: 100%;
}
.list-item-map .slide-image{
  width: 100%;
}
  /* 信息样式  */
.list-item-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:flex-start;
  height: auto;
  margin: 20rpx 20rpx;
}
.list-item-adress{
  flex-grow: 10;
}

  /* 课程滚动视图  */
.list-item-program{
  margin: 0;
}
.list-item-program text{
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}
.list-item-program-content {
  padding: 20rpx 20rpx;
  width: 710rpx;
  background-color: #F6F6F6;
  overflow: hidden;
}
.scroll-view_H{
    display: flex;
    flex-direction:column;
    justify-content:flex-start; 
    white-space: nowrap;
}
.scroll-view-item_H{
    display: inline-block;
    text-align: center;
    line-height: 130rpx;
    width: 250rpx;
    height: 130rpx;
    margin-right: 20rpx; 
    white-space: pre-wrap; 
}
.scroll-view-item_H text{
    width: 100%;
    float:left;
    margin: 0 auto;
}
.bc_green{
  background: green;
}
.bc_red{
  background: red;
}
.bc_yellow{
  background: yellow;
}

/* 评论列表  */
.list-comment{
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  padding: 20rpx 0rpx;
  width: 750rpx;
  background: #FFF;
  transition: all 300ms ease;
  font-size: 32rpx;
  border-top: 3rpx solid gainsboro;
  /* margin-top: 50rpx; */
}
.list-comment > .list-comment-item{
  margin: 0rpx 20rpx 20rpx;
  padding: 10rpx 0;
  border-bottom: 3rpx solid gainsboro;
}
.list-comment > .comment-item-head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:flex-start;
}
  /* 用户部分  */
.customer-comments .img-name-date{
  display: flex;
  justify-content:flex-start;
  align-items: flex-end;
}
.customer-comments .img-name-date image{
  width: 80rpx;
  height: 80rpx;
}
.customer-comments .img-name-date .username{
  display: flex;
  justify-content: flex-end;
  flex-basis:120rpx;
}
.customer-comments .img-name-date .comment-date{
  display: flex;
  justify-content: flex-end;
  flex-basis:500rpx;
}
.customer-comments .comment-content{
  display: block;
  padding: 20rpx 0;
  padding-left: 90rpx;
}
/* 员工简介  */
.all-staffs{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap:wrap; 
  /* align-items: center; */
  width: 710rpx;
}
.all-staffs > .staff-img-name{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:10rpx 0rpx;
  width: 140rpx;
}
.all-staffs image{
  width: 80rpx;
  height: 80rpx;
}